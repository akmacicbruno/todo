{% extends 'base.html.twig' %}

{% block title %}Todo app | Register
{% endblock %}

{% block body %}

	<div class=" container container__content container__register gap-5 justify-content-center align-items-center">

		<h1>Register</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
		<div class="reg">
			<button type="submit" class="btn btn-success">Register</button>
			<a href="{{ path('app_login') }}" class="top-left">Back to sign in page</a>
		</div>
	</div>

	{{ form_end(registrationForm) }}
{% endblock %}
