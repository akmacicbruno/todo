{% extends 'base.html.twig' %}

{% block title %}Todo app | Log in!
{% endblock %}

{% block body %}
	<div class="container container__login">
		<form method="post" class="container__login-form">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}


			<h1 class="container__login-form-heading">Please sign in</h1>
			<div class="container__login-form-field">
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			</div>
			<div class="container__login-form-field">
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
			</div>


			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="container__login-form-buttons">
				<button class="btn  btn-success" type="submit">
					Sign in
				</button>
				<div class="container__login-form-buttons-reg">
					<p>Don't have an account?
						<br>
						Register for free.</p>
					<a href="{{ path('register') }}" role="button">Click here to register</a>
				</div>

			</div>
		</form>
	</div>
{% endblock %}
